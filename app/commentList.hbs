{{#if comments.length}}
<div class="sqr-comments">
  {{#each comments}}
    <div class="sqr-comment">
      {{#if gravatarURL}}
      <img class="sqr-gravatar" src="{{gravatarURL}}?d=retro"></img>
      {{else}}
      <div class="sqr-gravatar">&nbsp;</div>
      {{/if}}
      <div class="post-col">
        <div>
          <span class="sqr-username">{{username}}</span>
          <span class="sqr-userid">{{userId}}</span>
          <span class="sqr-documentId" style="display:none;">{{documentId}}</span>
          <span class="sqr-date">{{date}}</span>
        </div>
          {{&body}}
      </div>
    </div>
  {{/each}}
</div>
{{else}}
<div>
  {{emptyMessage}}
</div>
{{/if}}
